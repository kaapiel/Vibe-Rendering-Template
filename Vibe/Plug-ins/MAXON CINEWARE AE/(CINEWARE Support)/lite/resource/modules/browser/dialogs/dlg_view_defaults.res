// C4D-DialogResource
DIALOG DLG_VIEW_DEFAULTS
{
  NAME STR_VIEW_DEFAULTS; CENTER_V; CENTER_H; 
  
  TAB GADGET_VIEW_DEFAULTS_TAB
  {
    SCALE_H; 
    SCALE_V;
    SELECTION_TABS; 
	 
	  GROUP	GADGET_TAB_NORMAL_MODE_GROUP
	  {
			SIZE	-256, -128;
      NAME STR_TAB_NORMAL_MODE_GROUP;
	    ALIGN_TOP; ALIGN_LEFT; 
	    BORDERSTYLE BORDER_NONE; BORDERSIZE 4, 4, 4, 4; 
	    COLUMNS 1;
	    
	    GROUP
	    {
	      ALIGN_TOP; ALIGN_LEFT; 
	      BORDERSIZE 0, 0, 0, 0; 
	      COLUMNS 2;

	      STATICTEXT { NAME STR_VIEW_MODE; CENTER_V; ALIGN_LEFT; }
				GROUP
				{
					SCALE_H;
					COMBOBOX GADGET_DEFAULT_VIEW_MODE
					{
						CHILDS
						{
							GADGET_DEFAULT_VIEW_ICON, STR_VIEW_ICON;
							GADGET_DEFAULT_VIEW_LIST, STR_VIEW_LIST;
						}
					}
				}

	      STATICTEXT { NAME STR_SORT_MODE; CENTER_V; ALIGN_LEFT; }
				GROUP
				{
					SCALE_H;
					COMBOBOX GADGET_DEFAULT_SORT_MODE
					{
