					}
				}

	      STATICTEXT { NAME STR_ICON_SIZE; CENTER_V; ALIGN_LEFT; }
				GROUP	GADGET_DEFAULT_ICON_SIZE_GROUP
				{
					SCALE_H;
		      EDITSLIDER GADGET_DEFAULT_ICON_SIZE { CENTER_V; SCALE_H; SIZE 70, 0; }
				}
	    }
	  }
	  GROUP	GADGET_TAB_SIMPLIFIED_MODE_GROUP
	  {
			SIZE	-256, -128;
      NAME STR_TAB_SIMPLIFIED_MODE_GROUP;
	    ALIGN_TOP; ALIGN_LEFT; 
	    BORDERSTYLE BORDER_NONE; BORDERSIZE 4, 4, 4, 4; 
	    COLUMNS 1;
	    
	    GROUP
	    {
	      ALIGN_TOP; ALIGN_LEFT; 
	      BORDERSIZE 0, 0, 0, 0; 
	      COLUMNS 2;

	      STATICTEXT { NAME STR_VIEW_MODE; CENTER_V; ALIGN_LEFT; }
				GROUP
				{
					SCALE_H;
					COMBOBOX GADGET_DEFAULT_SIMPLIFIED_VIEW_MODE
					{
						CHILDS
						{
							GADGET_DEFAULT_SIMPLIFIED_VIEW_ICON, STR_VIEW_ICON;
							GADGET_DEFAULT_SIMPLIFIED_VIEW_LIST, STR_VIEW_LIST;
						}
					}
				}

	      STATICTEXT { NAME STR_SORT_MODE; CENTER_V; ALIGN_LEFT; }
				GROUP
				{
					SCALE_H;
					COMBOBOX GADGET_DEFAULT_SIMPLIFIED_SORT_MODE
					{
						CHILDS
						{
							GADGET_DEFAULT_SIMPLIFIED_SORTBY_NAME, STR_SORTBY_NAME;
